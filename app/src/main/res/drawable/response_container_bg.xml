<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#1A1A2E"
                android:centerColor="#16213E"
                android:endColor="#12172D" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#4000FFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Inner glow -->
    <item android:inset="2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#2000FFFF" />
            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>