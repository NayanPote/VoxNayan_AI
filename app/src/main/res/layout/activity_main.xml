<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enhanced_gradient_bg"
    tools:context=".MainActivity">

    <!-- Neural Network Lines -->
    <com.nayanpote.voxnayanai.NeuralNetworkView
        android:id="@+id/neuralNetwork"
        android:forceDarkAllowed="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Enhanced Status Bar with Glowing Effects -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusBarCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/ai_background_medium"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/enhanced_status_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVoxTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_bold"
                    android:text="VOX AI"
                    android:textColor="@color/ai_primary_cyan"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_medium"
                    android:text="NEURAL ASSISTANT"
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_medium"
                        android:text="NETWORK"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tvNetworkStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_bold"
                        android:text="ONLINE"
                        android:textColor="@color/ai_success_green"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_medium"
                        android:text="WAKE WORD"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tvWakeWordStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_bold"
                        android:text="ACTIVE"
                        android:textColor="@color/ai_success_green"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/enhanced_status_indicator" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orbitron_medium"
                            android:text="STATUS"
                            android:textColor="@color/ai_text_secondary"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orbitron_bold"
                            android:text="ACTIVE"
                            android:textColor="@color/ai_success_green"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Enhanced AI Core with Particle System -->
    <FrameLayout
        android:id="@+id/aiCoreContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarCard">

        <!-- Background Glow Effect -->
        <View
            android:id="@+id/backgroundGlow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/enhanced_glow_bg" />


        <!-- AI Core Logo -->
        <ImageView
            android:id="@+id/ivVoxCore"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:contentDescription="Vox AI Core"
            android:scaleType="centerInside"
            android:src="@drawable/animated_logo" />

        <!-- Pulse Effect -->
        <View
            android:id="@+id/pulseEffect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/enhanced_pulse_effect"
            android:visibility="invisible" />

    </FrameLayout>

    <!-- Enhanced Response Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/responseCard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/ai_background_medium"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@+id/aiCoreContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/enhanced_response_bg"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orbitron_medium"
                android:text="NEURAL RESPONSE"
                android:textColor="@color/ai_secondary_blue"
                android:textSize="12sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@color/ai_primary_cyan" />

            <ScrollView
                android:id="@+id/responseScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/tvResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_regular"
                    android:lineSpacingExtra="2dp"
                    android:text="Hello, I am Vox. Your AI assistant is ready to help."
                    android:textColor="@color/ai_text_primary"
                    android:textSize="14sp" />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Enhanced Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/responseCard">

        <!-- Main Voice Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/ai_background_medium"
            app:cardCornerRadius="50dp"
            app:cardElevation="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/enhanced_voice_button_bg">

                <ImageButton
                    android:id="@+id/btnVoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="Voice Input"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_mic" />

                <View
                    android:id="@+id/voiceButtonGlow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/voice_button_glow"
                    android:visibility="invisible" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Control Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/ai_background_medium"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/enhanced_control_button_bg"
                    android:contentDescription="Settings"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_settings_premium" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/ai_background_medium"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <ImageButton
                    android:id="@+id/btnlens"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/enhanced_control_button_bg"
                    android:contentDescription="Chat History"
                    android:scaleType="centerInside"
                    android:src="@drawable/nayanlenslogo" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/ai_background_medium"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <ImageButton
                    android:id="@+id/btnPower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/enhanced_control_button_bg"
                    android:contentDescription="Power"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_power" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Enhanced Listening Indicator -->
    <androidx.cardview.widget.CardView
        android:id="@+id/listeningCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/ai_background_medium"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarCard">

        <LinearLayout
            android:id="@+id/listeningIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enhanced_listening_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <com.nayanpote.voxnayanai.EnhancedWaveView
                android:id="@+id/waveVisualization"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_bold"
                    android:text="NEURAL LISTENING"
                    android:textColor="@color/ai_primary_cyan"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_medium"
                    android:text="Processing audio input..."
                    android:textColor="@color/ai_text_secondary"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>