<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#1F1F35"
                android:centerColor="#1A2040"
                android:endColor="#15162A" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Metallic border -->
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#6000FFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item android:inset="3dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#3000FFFF" />
            <corners android:radius="17dp" />
        </shape>
    </item>

</layer-list>